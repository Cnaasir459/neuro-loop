---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
---

<a href={`/articles/${post.slug}`} class="block group">
  <article class="bg-card rounded-xl overflow-hidden border border-card group-hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
    <div class="p-4">
      <div class="text-xs text-muted mb-2 flex items-center gap-2">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          })}
        </time>
        {post.data.tags.length > 0 && <span>â€¢</span>}
        <div class="flex gap-1 flex-wrap">
          {post.data.tags.slice(0, 2).map((tag) => (
            <span class="text-[11px] bg-darker px-2 py-1 rounded text-muted">{tag}</span>
          ))}
        </div>
      </div>

      <h3 class="font-semibold text-lg leading-tight group-hover:text-primary transition-colors line-clamp-2">
        {post.data.title}
      </h3>
      <p class="text-muted text-sm mt-2 line-clamp-3">
        {post.data.description}
      </p>
    </div>
  </article>
</a>
