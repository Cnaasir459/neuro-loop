  <div id="mobile-nav" class="md:hidden hidden border-t border-card bg-darker">
    <div class="px-4 py-3 flex flex-col gap-3">
      <a href="/" class="text-muted hover:text-text transition-colors">Videos</a>
      <a href="/articles" class="text-muted hover:text-text transition-colors">Articles</a>
      <a href="/about" class="text-muted hover:text-text transition-colors">About</a>
      <a href="https://www.youtube.com/@neuroloop98" target="_blank" rel="noopener" class="bg-primary hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium transition-colors text-center">
