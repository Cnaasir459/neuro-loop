    <div class="hidden md:flex items-center gap-6">
      <a href="/" class="text-muted hover:text-text transition-colors">Videos</a>
      <a href="/articles" class="text-muted hover:text-text transition-colors">Articles</a>
      <a href="/about" class="text-muted hover:text-text transition-colors">About</a>
