---
import type { CollectionEntry } from 'astro:content';

interface Props {
  video: CollectionEntry<'videos'>;
}

const { video } = Astro.props;
---

<a href={`/videos/${video.slug}`} class="block group">
  <article class="bg-card rounded-xl overflow-hidden border border-card group-hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/10">
    <div class="relative aspect-video">
      <img 
        src={`https://img.youtube.com/vi/${video.data.youtubeId}/maxresdefault.jpg`}
        alt={video.data.title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        onerror="this.src='https://img.youtube.com/vi/${video.data.youtubeId}/hqdefault.jpg'"
      />
      <div class="absolute inset-0 bg-black/40 group-hover:bg-black/20 transition-colors flex items-center justify-center">
        <div class="w-14 h-14 bg-primary/90 rounded-full flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      </div>
      {video.data.duration && (
        <span class="absolute bottom-2 right-2 bg-black/80 px-2 py-1 rounded text-xs font-medium">
          {video.data.duration}
        </span>
      )}
    </div>
    
    <div class="p-4">
      <h3 class="font-semibold text-lg leading-tight group-hover:text-primary transition-colors line-clamp-2">
        {video.data.title}
      </h3>
      <p class="text-muted text-sm mt-2 line-clamp-2">
        {video.data.description}
      </p>
      <div class="flex items-center gap-2 mt-3">
        {video.data.tags.slice(0, 2).map((tag) => (
          <span class="text-xs bg-darker px-2 py-1 rounded text-muted">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </article>
</a>
